<h2>Забыли пароль?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-3 my-1" %>
  </div>

  <div class="actions">
    <%= f.submit "Отправить сброс пароля", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
